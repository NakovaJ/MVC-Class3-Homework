@model List<PizzaViewModel>

    <h2> This is the following Pizza View Model:</h2>
    <ul>
    @for(int i = 0; i < Model.Count; i++)
    {
        <li> @Model.ElementAt(i).PizzaName costs: @Model.ElementAt(i).PriceOfPizza and it is of size: @Model.ElementAt(i).PizzaSize</li>
    }
</ul>

<h2> Here are details from the _PizzaDetailsPartialView:</h2>
<ol>
    @for(int i=0; i < Model.Count; i++)
    {
        @Html.Partial("~/Views/Shared/Partials/_PizzaDetailsPartial.cshtml",Model[i])
        

    }
</ol>